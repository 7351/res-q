<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="tk.leoforney.dynamicchooser.MainActivity">


    <RadioGroup
        android:id="@+id/allianceGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Which alliance are you on?"
            android:textSize="@dimen/abc_text_size_title_material"/>

        <RadioButton
            android:id="@+id/red"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Red"
            android:textSize="@dimen/abc_text_size_medium_material"/>

        <RadioButton
            android:id="@+id/blue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Blue"
            android:textSize="@dimen/abc_text_size_medium_material"/>

    </RadioGroup>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:layout_marginBottom="@dimen/abc_button_padding_vertical_material"
        android:layout_marginTop="@dimen/abc_button_padding_vertical_material"
        android:background="@color/primary_dark_material_dark"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="How much delay do you want?"
        android:textSize="@dimen/abc_text_size_title_material"/>

    <EditText
        android:id="@+id/delayTimeEditText"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center_horizontal"
        android:inputType="number"
        android:text="0"/>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:layout_marginBottom="@dimen/abc_button_padding_vertical_material"
        android:layout_marginTop="@dimen/abc_button_padding_vertical_material"
        android:background="@color/primary_dark_material_dark"/>

    <RadioGroup
        android:id="@+id/goalGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Target goal?"
            android:textSize="@dimen/abc_text_size_title_material"/>

        <RadioButton
            android:id="@+id/floorGoalRadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="Floor goal"
            android:textSize="@dimen/abc_text_size_medium_material"/>

        <RadioButton
            android:id="@+id/beaconRepairZoneRadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:enabled="false"
            android:text="Beacon repair zone"
            android:textSize="@dimen/abc_text_size_medium_material"/>
    </RadioGroup>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:layout_marginBottom="@dimen/abc_button_padding_vertical_material"
        android:layout_marginTop="@dimen/abc_button_padding_vertical_material"
        android:background="@color/primary_dark_material_dark"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Percent of motor power? 0 - 100"
        android:textSize="@dimen/abc_text_size_title_material"/>

    <EditText
        android:id="@+id/motorPowerEditText"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center_horizontal"
        android:inputType="number"
        android:maxLength="3"
        android:text="100"/>


    <View
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:layout_marginBottom="@dimen/abc_button_padding_vertical_material"
        android:layout_marginTop="@dimen/abc_button_padding_vertical_material"
        android:background="@color/primary_dark_material_dark"/>

    <Button
        android:id="@+id/updateButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onUpdateButtonPressed"
        android:text="Push"/>

    <Button
        android:id="@+id/getButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onGetButtonPressed"
        android:text="Get"
        android:visibility="invisible"/>


</LinearLayout>
